/**
 * @fileoverview Firestore Security Rules for CurrencyTrack application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, ensuring that users can only access their own data. It prioritizes simplicity and security by leveraging path-based authorization and denormalizing user IDs within documents to avoid costly `get()` operations.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information, with 'userId' matching the Firebase Auth UID.
 * - /users/{userId}/savingsEntries/{savingId}: Stores individual savings entries for each user, nested under their respective user ID.
 *
 * Key Security Decisions:
 * - Users can only read and write their own user documents.
 * - Users can only create, read, update, and delete their own savings entries.
 * - List operations are allowed on a user's savings entries.
 * - Data validation is minimal in this prototype, focusing on ownership checks and relational integrity for authorization.
 *
 * Denormalization for Authorization:
 * The 'Saving' documents include the 'userId' to allow security rules to verify ownership without needing to perform extra `get()` operations. This improves performance and reduces costs.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) - If the user's auth UID matches the 'userId' path parameter.
     * @allow (get, update, delete) - If the user's auth UID matches the 'userId' path parameter.
     * @deny (list) - Users should not be able to list all user profiles.
     * @deny (create, update, delete) - If the user's auth UID does not match the 'userId' path parameter.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Controls access to savings entries for a specific user.
     * @path /users/{userId}/savingsEntries/{savingId}
     * @allow (create) - If the user's auth UID matches the 'userId' path parameter.
     * @allow (get, list, update, delete) - If the user's auth UID matches the 'userId' path parameter.
     * @deny (create, update, delete) - If the user's auth UID does not match the 'userId' path parameter.
     * @principle Enforces document ownership for savings entries.
     */
    match /users/{userId}/savingsEntries/{savingId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource.data.userId == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }
}