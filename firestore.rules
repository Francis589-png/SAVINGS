/**
 * @file Overview
 * This ruleset enforces a strict user-ownership model, ensuring that users can only access their own data.
 *
 * @dataStructure
 * - /users/{userId}: Stores user profiles, with 'userId' matching the Firebase Auth UID.
 * - /users/{userId}/savingsEntries/{savingId}: Stores savings entries for each user. The 'userId' path segment must match the 'userId' field in the saving entry document.
 *
 * @keySecurityDecisions
 * - Users can only create, read, update, and delete their own savings entries.
 * - User listing is explicitly denied to prevent information disclosure.
 *
 * @denormalizationForAuthorization
 * - Savings entries include a 'userId' field that is redundantly stored. This is intentional.  It allows rules to quickly verify ownership without additional reads (get() calls).
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects the /users collection, allowing only user creation with matching UID and denying all other operations.
     * @path /users/{userId}
     * @allow (create) User with UID 'AFQe994W3qWfSMx8abcoF2rcTq92' can create a document at /users/AFQe994W3qWfSMx8abcoF2rcTq92.
     * @deny (get, list, update, delete) Any user cannot get, list, update, or delete any document in the /users collection.
     * @principle Enforces strict user-ownership model.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      allow get: if false;
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures savings entries under each user's path, enforcing strict ownership.
     * @path /users/{userId}/savingsEntries/{savingId}
     * @allow (create) User with UID 'AFQe994W3qWfSMx8abcoF2rcTq92' can create a savings entry at /users/AFQe994W3qWfSMx8abcoF2rcTq92/savingsEntries/someSavingId.
     * @allow (get, list, update, delete) User with UID 'AFQe994W3qWfSMx8abcoF2rcTq92' can get, list, update, or delete their own savings entry at /users/AFQe994W3qWfSMx8abcoF2rcTq92/savingsEntries/someSavingId.
     * @deny (create, get, list, update, delete) User with UID 'otherUserId' cannot access savings entries under another user's path.
     * @principle Enforces document ownership for all operations, preventing unauthorized access to savings data.
     */
    match /users/{userId}/savingsEntries/{savingId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}