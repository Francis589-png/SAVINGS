/**
 * @description This ruleset enforces a strict user-ownership model, ensuring that users can only access their own data. It prioritizes authorization independence and secure list operations.
 * @dataStructure
 *  - /users/{userId}: Stores user profiles. The 'userId' parameter corresponds to the Firebase Auth UID.
 *  - /users/{userId}/savings/{savingId}: Stores savings entries for each user. Includes denormalized 'userId' for authorization independence.
 * @keySecurityDecisions
 *  - Users can only read and write their own user documents.
 *  - Users can only create, read, update, and delete savings entries under their own user ID.
 *  - No public listing of users is allowed.
 * @denormalizationForAuthorization
 *  - Savings documents include the `userId` to allow security rules to verify ownership without additional `get()` operations.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows a user to read and write their own user document.
     * @path /users/{userId}
     * @allow (get, create, update, delete) User with matching UID can access.
     * @deny (get, create, update, delete) User with a non-matching UID attempts to access.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && resource.data.id == request.resource.data.id;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * @description Allows a user to manage their own savings entries.
     * @path /users/{userId}/savings/{savingId}
     * @allow (create, get, list, update, delete) User with matching UID can access savings entries under their ID.
     * @deny (create, get, list, update, delete) User with a non-matching UID attempts to access savings entries.
     * @principle Restricts access to a user's own savings entries.
     */
    match /users/{userId}/savings/{savingId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && resource != null && resource.data.userId == request.resource.data.userId;
      allow delete: if isOwner(userId) && resource != null;
    }
  }
}